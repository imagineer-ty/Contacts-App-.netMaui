<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Contacts.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Contacts.Maui"
    xmlns:views="clr-namespace:Contacts.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:ContactsPage}"
        Route="ContactsPage" />

</Shell>
<!--Note: Line 7!!! you need to add a namespace for the view to select a different 
    homepage than the standard start up then add the namespace to the Content template
    below aka views:ContactsPage-->